# ====================================================================
# AutoMLPro Environment Variables
# Copy this file to .env and fill in your values
# ====================================================================

# ── Application ────────────────────────────────────────────────────
ENVIRONMENT=development          # development | staging | production
APP_NAME=AutoMLPro
APP_VERSION=1.0.0
DEBUG=true
LOG_LEVEL=INFO
SECRET_KEY=your-secret-key-here-change-in-production

# ── API Server ─────────────────────────────────────────────────────
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=true                  # Set to false in production
API_CORS_ORIGINS=http://localhost:3000,http://localhost:8501

# ── Rate Limiting ──────────────────────────────────────────────────
RATE_LIMIT_REQUESTS=100          # requests per window
RATE_LIMIT_WINDOW=60             # window in seconds

# ── Database ───────────────────────────────────────────────────────
DATABASE_URL=sqlite:///./data/automl.db
# For production PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost:5432/automl
POSTGRES_DB=automl
POSTGRES_USER=automl
POSTGRES_PASSWORD=change_me_in_production
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# ── MLflow ─────────────────────────────────────────────────────────
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_BACKEND_URI=sqlite:///./data/mlflow.db
MLFLOW_ARTIFACT_ROOT=./models/registry
MLFLOW_PORT=5000
MLFLOW_EXPERIMENT_NAME=automl-pro-default

# ── Dashboard ──────────────────────────────────────────────────────
DASHBOARD_PORT=8501
STREAMLIT_SERVER_HEADLESS=true

# ── Redis Cache ────────────────────────────────────────────────────
REDIS_URL=redis://localhost:6379/0
REDIS_PORT=6379

# ── Model Training ─────────────────────────────────────────────────
DEFAULT_CV_FOLDS=5
DEFAULT_METRIC=auto              # auto | accuracy | f1 | roc_auc | rmse | mae
OPTUNA_N_TRIALS=50
OPTUNA_TIMEOUT=3600              # seconds
RANDOM_SEED=42

# ── Data Paths ─────────────────────────────────────────────────────
DATA_DIR=./data
RAW_DATA_DIR=./data/raw
PROCESSED_DATA_DIR=./data/processed
FEATURES_DIR=./data/features
PREDICTIONS_DIR=./data/predictions

# ── Model Paths ────────────────────────────────────────────────────
MODELS_DIR=./models
TRAINED_MODELS_DIR=./models/trained
MODEL_REGISTRY_DIR=./models/registry
ONNX_MODELS_DIR=./models/onnx

# ── Reports ────────────────────────────────────────────────────────
REPORTS_DIR=./reports
ARTIFACTS_DIR=./artifacts

# ── Monitoring ─────────────────────────────────────────────────────
DRIFT_DETECTION_THRESHOLD=0.05
PERFORMANCE_DEGRADATION_THRESHOLD=0.10
MONITORING_WINDOW_DAYS=7
ALERT_EMAIL=alerts@example.com

# ── Feature Flags ──────────────────────────────────────────────────
ENABLE_ONNX_EXPORT=true
ENABLE_EXPLAINABILITY=true
ENABLE_FAIRNESS_ANALYSIS=true
ENABLE_AUTO_RETRAIN=false
ENABLE_WANDB=false

# ── External Services (optional) ───────────────────────────────────
WANDB_API_KEY=your-wandb-key
AWS_ACCESS_KEY_ID=your-aws-key
AWS_SECRET_ACCESS_KEY=your-aws-secret
AWS_DEFAULT_REGION=us-east-1
S3_BUCKET_NAME=automl-artifacts
